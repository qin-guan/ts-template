{
  "name": "@opengovsg/ts-template",
  "version": "1.0.0",
  "description": "A template for most TypeScript projects in OGP",
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "scripts": {
    "all": "pnpm -r --filter=./{packages,apps}/** --parallel run",
    "dev": "docker-compose up & nr all dev & wait",
    "dev:docker": "docker-compose up --build",
    "dev:app": "npm run all -- --kill-others \"npm:on-* dev\"",
    "lint": "nr all lint",
    "lint:fix": "nr all lint:fix",
    "test": "nr all test",
    "build": "nr all build",
    "coverage": "nr all test:cov",
    "cz": "git-cz",
    "start": "pnpm --filter backend run start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@antfu/ni": "^0.18.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/travis-cli": "^17.1.2",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "commitizen": "^4.2.4",
    "concurrently": "^7.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
